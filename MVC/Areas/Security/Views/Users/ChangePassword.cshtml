@model MVC.Security.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

</script>

<h1>@ViewBag.Title</h1>

<div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("ChangePassword", "", FormMethod.Post, new { id = "changePassword" }))
    {
        <div class="col-12">
            @Html.LabelFor(m => m.ActualPassword)
            @Html.TextBoxFor(m => m.ActualPassword, new { type = "password" })
            @Html.ValidationMessageFor(m => m.ActualPassword)
        </div>
        <div class="col-12">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { type = "password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="col-12">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.ActionLink("Volver", "Index", "Home", new { Area = "" }, new { @class = "btn_secundario btn-right" })
        <a class="btn_secundario btn-right" href="#" onclick="javascript: $('#changePassword').submit(); return false;">Guardar</a>
    }
</div>
