@model MVC.Security.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Confirmar Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("ConfirmEmailAndChangePassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { disabled = "disabled" })
        </div>
        @if (Model.HasToChangePassword)
        {
            <div class="col-12">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="col-12">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        }
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Code)
        @Html.HiddenFor(m => m.Email)
        @Html.HiddenFor(m => m.HasToChangePassword)
        <input type="submit" value="Confirmar Cuenta" />
    </div>
}