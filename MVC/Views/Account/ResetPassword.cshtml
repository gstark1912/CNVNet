@model MVC.Security.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { disabled = "disabled" })
        </div>
        <div class="col-12">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { type = "password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="col-12">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Code)
        @Html.HiddenFor(m => m.Email)
        <input type="submit" value="Reset Password" />
    </div>
}